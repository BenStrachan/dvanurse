<div class="row">
  <div class="col-md-6 col-sm-6 col-6">
    <h1>Billable items</h1>
  </div>
  <div class="col-md-6 col-sm-6 col-6 text-right">
    <a class="btn btn-outline-primary" href="<%= new_billable_path %>">New</a>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Item number</th>
      <th>Visit type</th>
      <th>Min visit</th>
      <th>Max visit</th>
      <th>Core fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @billables.each do |billable| %>
      <tr>
        <td><%= billable.item_number %></td>
        <td><%= billable.visit_type %></td>
        <td><%= billable.min_visit %></td>
        <td><%= billable.max_visit %></td>
        <td><%= billable.core_fee %></td>
        <td><%= link_to 'Show', billable %></td>
        <td><%= link_to 'Edit', edit_billable_path(billable) %></td>
        <td><%= link_to 'Destroy', billable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Billable', new_billable_path %>
