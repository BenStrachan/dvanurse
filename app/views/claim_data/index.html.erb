<div class="row">
  <div class="col-md-6 col-sm-6 col-6">
    <h1>Claim data</h1>
  </div>
  <div class="col-md-6 col-sm-6 col-6 text-right">
    <a class="btn btn-outline-primary" href="<%= new_claim_datum_path %>">New</a>
    <a class="btn btn-outline-success" href="#">Sync</a>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Client full name</th>
      <th>Provider full name</th>
      <th>Date of service</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @claim_data.each do |claim_datum| %>
      <tr>
        <td><%= claim_datum.client_full_name %></td>
        <td><%= claim_datum.provider_full_name %></td>
        <td><%= claim_datum.date_of_service %></td>
        <td><%= link_to 'Show', claim_datum %></td>
        <td><%= link_to 'Edit', edit_claim_datum_path(claim_datum) %></td>
        <td><%= link_to 'Destroy', claim_datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Claim Data', new_claim_datum_path %>
